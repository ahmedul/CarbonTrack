              "raw": "{\n  \"date\": \"2024-01-15\",\n  \"category\": \"transportation\",\n  \"activity\": \"car_drive\",\n  \"amount\": 30.0,\n  \"unit\": \"km\",\n  \"description\": \"Updated daily commute distance\"\n}",
              "options": {
