    {
      "name": "üìä Carbon Tracking",
      "item": [
        {
          "name": "Get Carbon Emissions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/carbon-emissions/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "carbon-emissions", ""]
            }
          }
        },
        {
          "name": "Add Carbon Emission",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"2024-01-15\",\n  \"category\": \"transportation\",\n  \"activity\": \"car_drive\",\n  \"amount\": 25.5,\n  \"unit\": \"km\",\n  \"description\": \"Daily commute to office\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/carbon-emissions/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "carbon-emissions", ""]
            }
          }
        },
        {
          "name": "Update Carbon Emission",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"2024-01-15\",\n  \"category\": \"transportation\",\n  \"activity\": \"car_drive\",\n  \"amount\": 30.0,\n  \"unit\": \"km\",\n  \"description\": \"Updated daily commute distance\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/carbon-emissions/{{emission_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "carbon-emissions", "{{emission_id}}"]
            }
          }
        },
        {
          "name": "Delete Carbon Emission",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/carbon-emissions/{{emission_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "carbon-emissions", "{{emission_id}}"]
            }
          }
        }
      ]
    },
