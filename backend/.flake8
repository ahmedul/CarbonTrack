[flake8]
max-line-length = 88
extend-ignore = 
    # E203: whitespace before ':'
    E203,
    # W503: line break before binary operator
    W503,
    # E501: line too long (handled by black)
    E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .tox,
    dist,
    build,
    *.egg-info,
    migrations

per-file-ignores =
    # Ignore unused imports in __init__.py files
    __init__.py:F401
    # Ignore long lines in test files
    tests/*:E501

max-complexity = 10
