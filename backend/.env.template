# CarbonTrack Backend Environment Variables Template
# Copy this file to .env and update with your actual values
# NEVER commit the actual .env file with real credentials!

# App Configuration
APP_NAME=CarbonTrack API
APP_VERSION=1.0.0
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=8000

# AWS Configuration (for production)
AWS_REGION=your-aws-region
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# DynamoDB Tables (for production)
USERS_TABLE=carbontrack-users
ENTRIES_TABLE=carbontrack-entries

# Cognito Configuration (for production)
COGNITO_USER_POOL_ID=your-cognito-user-pool-id
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_CLIENT_SECRET=your-cognito-client-secret

# JWT Configuration
JWT_SECRET_KEY=generate-a-strong-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Origins (JSON array format)
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]